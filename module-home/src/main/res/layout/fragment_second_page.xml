<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="appInfo"
            type="com.xiangyang.module_home.viewmodel.AppListViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/install_app_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="304px"
            android:layout_marginTop="185px"
            binding:itemBinding="@{appInfo.installedItemBinding}"
            binding:items="@{appInfo.installAppList}"
            binding:layoutManager="@{LayoutManagers.grid(5)}" />

    </RelativeLayout>
</layout>