<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/app_card"
        android:layout_width="550px"
        android:layout_height="500px">
        <ImageView
            android:id="@+id/iv_music_icon"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:src="@mipmap/icon_card_ximalaya"/>
        <TextView
            android:layout_width="120px"
            android:layout_height="36px"
            android:textSize="30px"
            android:text="喜马拉雅"
            android:layout_marginStart="58px"
            android:layout_marginTop="8px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_singCon"
                android:layout_width="340dp"
                android:layout_height="178dp"
                android:background="@drawable/card_audio" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="45px"
                android:layout_marginTop="48px"
                android:gravity="center"
                android:text="《名侦探的噩梦》"
                android:textSize="36px" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px">

            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_toLeftOf="@+id/iv_play"
                android:layout_marginRight="60px"
                android:src="@drawable/button_bar_last" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerInParent="true"
                android:src="@drawable/button_bar_play" />
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_toRightOf="@+id/iv_play"
                android:src="@drawable/button_bar_next"
                android:layout_marginLeft="60px"/>
        </RelativeLayout>


    </RelativeLayout>

</layout>