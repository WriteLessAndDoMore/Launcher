<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/app_card"
        android:layout_width="550dp"
        android:layout_height="500dp">
        <ImageView
            android:id="@+id/iv_music_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/icon_ximalaya"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textSize="30sp"
            android:text="喜马拉雅"
            android:layout_marginLeft="58dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_singCon"
                android:layout_width="340dp"
                android:layout_height="178dp"
                android:background="@drawable/card_audio" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="36dp"
                android:layout_marginTop="44dp"
                android:gravity="center"
                android:text="《名侦探的噩梦》"
                android:textSize="36sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_play"
                />
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/iv_play"/>
        </RelativeLayout>


    </RelativeLayout>

</layout>